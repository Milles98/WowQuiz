          ColumnDefinitions="*">
        
        <Label Grid.Row="0" 
               Text="Hello and welcome to the WowQuiz app!"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               FontSize="16"
               FontAttributes="Bold"/>
        
